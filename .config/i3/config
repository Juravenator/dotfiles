# reload the configuration file
# mod+r
bindcode $mod+Shift+27 reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
#bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
# mod+shift+e
bindcode $mod+Shift+26 exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        #bindsym j resize shrink width 10 px or 10 ppt
        #bindsym k resize grow height 10 px or 10 ppt
        #bindsym l resize shrink height 10 px or 10 ppt
        #bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# mod+r
bindcode $mod+27 mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
        tray_output primary
        position top
}


# toggle keyboard script
bindsym control+space exec $HOME/scripts/togglekeyboard
exec setxkbmap pl -variant dvp

# tap to click & natural scrolling on trackpad
exec touchpad_config -e 13

# screen brightness
# https://gitlab.com/wavexx/acpilight
# requires 'glenn ALL=NOPASSWD: /usr/bin/xbacklight' in sudoers
bindsym XF86MonBrightnessDown exec --no-startup-id sudo xbacklight -fps 100 -dec 5
bindsym XF86MonBrightnessUp exec --no-startup-id sudo xbacklight -fps 100 -inc 5

# F3
# bindsym XF86LaunchA exec --no-startup-id echo $(whoami) > /home/glenn/who

# F4
# bindsym XF86LaunchB exec --no-startup-id echo $(whoami) > /home/glenn/who

# Keyboard brightness
bindsym XF86KbdBrightnessDown exec --no-startup-id sudo xbacklight -fps 1000 -ctrl 'smc::kbd_backlight' -dec 5
bindsym XF86KbdBrightnessUp exec --no-startup-id sudo xbacklight -fps 1000 -ctrl 'smc::kbd_backlight' -inc 5

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%-
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse set Master 1+ toggle

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# mod+shift+m
bindcode $mod+shift+58 exec ~/lock.sh

exec compton

# mod+;
bindcode $mod+shift+47 exec spectacle

# fancy wallpapers
# exec watch -n 300 'feh --randomize --bg-fill /home/glenn/Pictures/wallpapers/*'
exec watch -n 300 /usr/bin/feh --randomize --bg-fill /home/glenn/Pictures/wallpapers/*

